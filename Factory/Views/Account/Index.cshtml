@{
    Layout = "_Layout";
}

@using System.Security.Claims

<h2>Authentication with Identity</h2>
<h5 class = "pageLink3">@Html.ActionLink("Home", "Index", "Home")</h5>
<br />
@if (User.Identity.IsAuthenticated)
{
    <h3>Hello @User.Identity.Name!</h3>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" class="btn " value="Log out" />
    }
}
else
{
    <h3>Register or Login to your account.</h3>
    <h5>@Html.ActionLink("Register", "Register", null, null, new { @class = "pageLink" })</h5>
    <h5>@Html.ActionLink("Log in", "Login", null, null, new { @class = "pageLink" })</h5>
}

@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class = "container">
  <h2>Engineer List</h2>

  @Html.ActionLink("Add Engineer", "Create", null, null, new { @class = "pageLink" })
  @Html.ActionLink("Home", "Index", "Home", null, new { @class = "pageLink" })
  
  <div class = "indexBox">
    <img class = "image1" src = "~/image/machine3.png" >

    @if (@Model.Count == 0)
    {
      <h2>Engineer List is EMPTY!</h2>
    } 
    else
    {
      <h6>Click on Engineer to See Details</h6>
      @foreach(Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{ engineer.Name }", "Details", new { id = engineer.EngineerId }, new { @class = "linkWordColor" }) 
        </li>
      }
    }
  </div>   
</div>
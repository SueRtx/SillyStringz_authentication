@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class = "container">
  <h2>Machines</h2>
  
  @Html.ActionLink("Add New Machine", "Create", null, null, new { @class ="pageLink" })
  @Html.ActionLink("Home", "Index", "Home", null, new { @class ="pageLink" })

  <div class = "indexBox">
    <img class = "image1" src = "~/image/machine3.png">

    @if (@Model.Count == 0)
      {
        <h4>No Machines Yet!</h4>
      } 
      else
      {
      <h5>Click on Machine to See Details</h5>
      @foreach (Machine machine in Model)
      {
        <li>@Html.ActionLink($"{ machine.Name }", "Details", new { id = machine.MachineId }, new { @class ="linkWordColor" })</li>
      }
    }
  </div> 
</div>
